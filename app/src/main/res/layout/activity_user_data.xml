                <com.google.android.material.textfield.TextInputLayout
                    style="@style/custom_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@id/height"
                    app:boxCornerRadiusBottomEnd="30dp"
                    app:boxCornerRadiusBottomStart="30dp"
                    app:boxCornerRadiusTopEnd="30dp"
                    app:boxCornerRadiusTopStart="30dp">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/work1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="@string/working_at"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#919090"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/custom_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    app:boxCornerRadiusBottomEnd="30dp"
                    app:boxCornerRadiusBottomStart="30dp"
                    app:boxCornerRadiusTopEnd="30dp"
                    app:boxCornerRadiusTopStart="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/height"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="@string/height_in_feet"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#919090"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="30dp">

                        <Button
                            android:id="@+id/male"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#0277BD"
                            android:scaleX="1.3"
                            android:scaleY="1.3"
                            android:text="@string/male"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            tools:ignore="ButtonStyle" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="30dp">

                        <Button
                            android:id="@+id/female"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#0277BD"
                            android:scaleX="1.3"
                            android:scaleY="1.3"
                            android:text="@string/female"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            tools:ignore="ButtonStyle" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="30dp">

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#0277BD"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        android:text="@string/next"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        tools:ignore="ButtonStyle" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/step_2"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/up"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/upload_photo" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/up_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="40dp"
                android:src="@drawable/profile"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loading"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="175dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/yellow"
                app:lottie_speed="2" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="30dp">

                <Button
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#0277BD"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:text="@string/upload_image"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/welcome_text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="30dp">

                <Button
                    android:id="@+id/conti"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#0277BD"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:text="@string/continue_"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>